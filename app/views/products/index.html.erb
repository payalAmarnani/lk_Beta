<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Product name</th>
      <th>Price</th>
      <th>Stock level</th>
      <th>Supplier code</th>
      <th>Product code</th>
      <th>Short description</th>
      <th>Long description</th>
      <th>Active</th>
      <th>Hidden</th>
      <th>New</th>
      <th>Gst applicable</th>
      <th>Color</th>
      <th>Pattern</th>
      <th>Season</th>
      <th>Occasion</th>
      <th>Fabric</th>
      <th>Yarn</th>
      <th>Buttons</th>
      <th>Lining fabric</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><% if !product.category.nil?%>
<%= product.category.name %><% end%></td>
        <td><%= image_tag product.product_image.url(:small)%></td>
        <td><%= product.product_name %></td>
        <td><%= product.price %></td>
        <td><%= product.stock_level %></td>
        <td><%= product.supplier_code %></td>
        <td><%= product.product_code %></td>
        <td><%= product.short_description %></td>
        <td><%= product.long_description %></td>
        <td><%= product.active %></td>
        <td><%= product.hidden %></td>
        <td><%= product.new %></td>
        <td><%= product.gst_applicable %></td>
        <td><%= product.color %></td>
        <td><%= product.pattern %></td>
        <td><%= product.season %></td>
        <td><%= product.occasion %></td>
        <td><%= product.fabric %></td>
        <td><%= product.yarn %></td>
        <td><%= product.buttons %></td>
        <td><%= product.lining_fabric %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

